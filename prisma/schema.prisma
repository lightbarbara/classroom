generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model buyers {
  id           Int            @id @default(autoincrement())
  name         String
  email        String
  password     String
  balance      Float          @default(0) @db.Real
  negotiations negotiations[]
}

model houses {
  id           Int            @id @default(autoincrement())
  cep          String
  price        Float          @db.Real
  negotiations negotiations[]
}

model negotiations {
  id        Int       @id @default(autoincrement())
  houseId   Int?
  buyerId   Int?
  realtorId Int?
  status    String    @default("on going") @db.VarChar(20)
  rating    String
  buyers    buyers?   @relation(fields: [buyerId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  houses    houses?   @relation(fields: [houseId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  realtors  realtors? @relation(fields: [realtorId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model realtors {
  id              Int            @id @default(autoincrement())
  name            String
  salesCommission Float          @db.Real
  negotiations    negotiations[]
}
